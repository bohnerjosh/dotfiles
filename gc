#!/usr/bin/bash
<<<<<<< HEAD
echo "Compiling..."
if [[ $# == 2 ]]
then
    if [[ -e $2.c ]]
    then
        if [[ $1 == "-m32" ]]
        then
            echo $2
            gcc $2.c -m32 -g -o $2 && ./$2
        else if [[ $1 == "-lp" ]]
        then
            gcc $2.c -lpthread -g -o $2 && ./$2
        else
            echo "invalid argument at position 1: $1"
        fi
    fi
    else
        echo "sorry, $2.c does not exist"
    fi
else if [[ -e $1.c ]]
then 
    gcc $1.c -g -o $1 && ./$1

else
    echo "sorry, $1.c does not exist"
fi
fi
